<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_green"
    android:id="@+id/relativeLayout1">
    <ImageView
        android:src="@drawable/status_ready"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/abc_menu_function_shortcut_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:cropToPadding="false"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:layout_marginTop="148.5dp" />
    <TextView
        android:text="@string/main"
        android:layout_width="wrap_content"
        android:textColor="@color/BrightGreen"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:id="@+id/textView1"
        android:layout_centerHorizontal = "true"
        android:visibility="visible"
        android:textSize="32sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="14.5dp"
        android:textStyle="bold"
        android:gravity="top"
        android:textAlignment="center" />
    <TextView
        android:text="@string/protected_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BrightGreen"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1" 
        android:textAlignment="center" />
</RelativeLayout>